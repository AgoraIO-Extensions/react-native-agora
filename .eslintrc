{
  "root": true,
  "extends": [
    "@react-native-community",
    "prettier"
  ],
  "plugins": [
    "import",
    "auto-import"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "auto-import/auto-import": [
      "error",
      {
        "rootPath": "./src"
      }
    ],
    "import/order": [
      "error",
      {
        "newlines-between": "always-and-inside-groups",
        "pathGroups": [
          {
            "pattern": "../internal/IrisApiEngine",
            "group": "unknown"
          },
          {
            "pattern": "./impl/**",
            "group": "unknown"
          }
        ],
        "alphabetize": {
          "order": "asc",
          "orderImportKind": "asc"
        }
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false
      }
    ]
  }
}
